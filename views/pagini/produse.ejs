            <p>
            <label>orice culoare
                <input id="i_check_oricare" name="gr_chck" checked value="oricare" type="checkbox"/>
            </label>
            </p>
            <p>
            <label>negru
                <input id="i_check_negru" name="gr_chck" value="negru" type="checkbox"/>
                    <label>are 
                        <input id="i_rad1_are" checked name="gr_rad1" value="are" type="radio"/>
                    </label>
                    <label>nu are 
                        <input id="i_rad1_nu_are" name="gr_rad1" value="nu are" type="radio"/>
                    </label>
            </label>
            </p>
            <p>
            <label>alb
                <input id="i_check_alb" name="gr_chck" value="alb" type="checkbox"/>
                    <label>are 
                        <input id="i_rad2_are" checked name="gr_rad2" value="are" type="radio"/>
                    </label>
                    <label>nu are 
                        <input id="i_rad2_nu_are" name="gr_rad2" value="nu are" type="radio"/>
                    </label>
            </label>
            </p>
            <p>
            <label>nud
                <input id="i_check_nud" name="gr_chck" value="nud" type="checkbox"/>
                    <label>are 
                        <input id="i_rad3_are" checked name="gr_rad3" value="are" type="radio"/>
                    </label>
