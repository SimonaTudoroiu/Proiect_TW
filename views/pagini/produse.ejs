                    </label>
            </label>
            </p>
            <p>
            <label>maro
                <input id="i_check_maro" name="gr_chck" value="maro" type="checkbox"/>
                    <label>are 
                        <input id="i_rad4_are" checked name="gr_rad4" value="are" type="radio"/>
                    </label>
                    <label>nu are 
                        <input id="i_rad4_nu_are" name="gr_rad4" value="nu are" type="radio"/>
                    </label>
            </label>
            </p>
            <p>
            <label>rosu
                <input id="i_check_rosu" name="gr_chck" value="rosu" type="checkbox"/>
                    <label>are 
                        <input id="i_rad5_are" checked name="gr_rad5" value="are" type="radio"/>
                    </label>
                    <label>nu are 
                        <input id="i_rad5_nu_are" name="gr_rad5" value="nu are" type="radio"/>
                    </label>
            </label>
            </p>
            <p>
            <label>albastru
                <input id="i_check_albastru" name="gr_chck" value="albastru" type="checkbox"/>
                    <label>are 
                        <input id="i_rad6_are" checked name="gr_rad6" value="are" type="radio"/>
                    </label>
                    <label>nu are 
                        <input id="i_rad6_nu_are" name="gr_rad6" value="nu are" type="radio"/>
                    </label>
            </label>
            </p>
            <p>
            <label>verde
                <input id="i_check_verde" name="gr_chck" value="verde" type="checkbox"/>
                    <label>are 
                        <input id="i_rad7_are" checked name="gr_rad7" value="are" type="radio"/>
                    </label>
                    <label>nu are 
                        <input id="i_rad7_nu_are" name="gr_rad7" value="nu are" type="radio"/>
                    </label>
            </label>
            </p>
            <p>
            <label>roz
                <input id="i_check_roz" name="gr_chck" value="roz" type="checkbox"/>
                    <label>are 
                        <input id="i_rad8_are" checked name="gr_rad8" value="are" type="radio"/>
                    </label>
                    <label>nu are 
                        <input id="i_rad8_nu_are" name="gr_rad8" value="nu are" type="radio"/>
